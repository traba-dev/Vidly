
@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        <p>Membership Type: @Model.MembershipType.Name</p>
    </li>
    <li>
        @if (!Model.Birthdate.Equals("") && Model.Birthdate != null)
        {
            <p>Birthdate: @Convert.ToDateTime(Model.Birthdate).ToString("dd/MM/yyyy")</p>
        }
    </li>
</ul>


