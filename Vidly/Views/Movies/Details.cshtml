@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Convert.ToDateTime(@Model.RealeaseDate).ToString("dd/MM/yyyy")</li>
    <li>Date Added: @Convert.ToDateTime(@Model.DateAdd).ToString("dd/MM/yyyy")</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>

